{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "build",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./custom.d.ts"],
    "resolveJsonModule": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@views/*": ["src/views/*"]
    }
  },
  "include": ["src/**/*", "typings.d.ts"],
  "exclude": ["build", "node_modules"]
}
